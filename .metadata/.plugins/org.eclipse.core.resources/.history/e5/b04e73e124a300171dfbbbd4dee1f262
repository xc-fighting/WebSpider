package csci572hw2.webcrawler;

import java.io.File;

public class FileUtil {

	private File storageFolder;
	String filename="";
	private void init() throws Exception{
		storageFolder=new File("output");
		if(storageFolder.exists()==false){
			storageFolder.mkdirs();
		}
		System.out.println(storageFolder.getAbsolutePath());
		filename=storageFolder.getAbsolutePath()+"/fetch_USA_TODAY.csv";
		storageFolder=new File(filename);
		if(storageFolder.exists()==false){
			storageFolder.createNewFile();
		}
		filename=storageFolder.getAbsolutePath()+"/visit_USA_TODAY.csv";
		storageFolder=new File(filename);
		if(storageFolder.exists()==false){
			storageFolder.createNewFile();
		}
		filename=storageFolder.getAbsolutePath()+"/urls_USA_TODAY.csv";
		storageFolder=new File(filename);
		if(storageFolder.exists()==false){
			storageFolder.createNewFile();
		}
		
	}
	public FileUtil(){
		try {
			init();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
